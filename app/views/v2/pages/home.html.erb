<%#= image_tag 'cruz.jpg', id: "self" %>

<a href="/v2">
  <div class="wtf">
    <span></span>
    <span></span>
    <span></span>
  </div>
</a>

<div class="container">
  <div class="slide" style="background-image: url(<%= asset_path '4landscapecolor.jpg' %>)">
    <h1>
      Cruz Núñez
    </h1>
    <footer>
      Full-stack Developer
    </footer>
    <div>
      <%= link_to 'https://www.linkedin.com/in/cruznunez', class: 'link' do %>
        <i class="fa fa-linkedin-square" aria-hidden="true"></i>
      <% end %>
      <%= link_to 'https://github.com/cruznunez', class: 'link' do %>
        <i class="fa fa-github-square" aria-hidden="true"></i>
      <% end %>
      <%= link_to 'mailto:nunez.a.cruz@gmail.com', class: 'link' do %>
        <i class="fa fa-envelope" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>

  <div class="slide-divider">
    <h1>About</h1>

    <p>
      Hello, I'm Cruz Nunez. I'm a full-stack web developer working for Code the Dream. I love to create living, breathing websites that fill the needs around me. Feel free to contact me with questions or ideas that we can work on together.
    </p>
    <hr>
  </div>


  <div class="slide-divider">
    <h1>Projects</h1>
  </div>

  <div class="projects-container">
    <% @projects.each do |project| %>
      <%= link_to v2_project_path(project) do %>
        <div class="project" style="background-image: url(<%= project.image.link %>)">
          <div class="project-title"><%= project.name %></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="flex justify-center mb">
    <%= link_to v2_projects_path do %>
      <h1>See all projects</h1>
    <% end %>
  </div>
</div>
